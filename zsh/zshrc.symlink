# Oh-My-ZSH Configuration
ZSH_THEME="agnoster"
DEFAULT_USER=`whoami`
plugins=(git colorize themes)
source $ZSH/oh-my-zsh.sh

# Private Variables
if [[ -a ~/.localrc ]]; then
  source ~/.localrc
fi

# Load ZSH Configurations
typeset -U config_files
config_files=($DOTS/**/*.zsh)

for file in ${${config_files:#*/path.zsh}:#*/completion.zsh}; do
  source $file
done

autoload -U compinit
compinit

for file in ${(M)config_files:#*/completion.zsh}; do
  source $file
done

unset config_files
