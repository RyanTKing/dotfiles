#
# Prezto Configuration
#

# Various Prezto Options
zstyle ':prezto:*:*' color 'yes'

# Prezto Modules
zstyle ':prezto:load' pmodule \
       'environment' \
       'utility' \
       'syntax-highlighting' \
       'archive' \
       'autosuggestions' \
       'command-not-found' \
       'completion' \
       'directory' \
       'docker' \
       'editor' \
       'git' \
       'history-substring-search' \
       'history' \
       'homebrew' \
       'osx' \
       'pacman' \
       'prompt' \
       'rsync' \
       'spectrum' \
       'terminal' \

# Prezto Theme
zstyle ':prezto:module:prompt' theme 'kylewest'
zstyle ':prezto:module:utility' safe-ops 'no'
zstyle ':prezto:module:ssh:load' identities 'id_rsa' 'id_cogo'
