# Cogo ZSH config
if [ -z "${SSH_AUTH_SOCK}" ]; then
	eval `ssh-agent -s`
fi

ssh-add ${HOME}/.ssh/fleet_rsa
alias au="export FLEETCTL_ENDPOINT=http://au.cogolo.net"
alias hm="export FLEETCTL_ENDPOINT=http://hmetal.cogolo.net"
alias qm="export FLEETCTL_ENDPOINT=http://qmetal.cogolo.net"
alias tm="export FLEETCTL_ENDPOINT=http://tmetal.cogolo.net"

helmdev() {
	helm --tiller-namespace=platform-dev $@
}

sshc() {
	ssh root@${1}.cogolo.net
}

kinitc() {
	kinit rking@ADVERPLEX.COM
}

fleet() {
	export FLEETCTL_ENDPOINT="http://${1}.cogolo.net"
}

