[user]
	name = Ryan King
	email = hello@ryanking.com
	signingkey = 0xFD3894645D8BE1A4
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
[include]
	path = ~/.gitconfig.local
[color]
	status = auto
	diff = auto
	branch = auto
	ui = true
[commit]
	gpgsign = true
[diff]
	tool = nvim
[merge]
	tool = nvim
[push]
	default = simple
[pull]
	rebase = true
[fetch]
	prune = true
[includeIf "gitdir:~/go/src/git.cogolo.net/"]
	path = ~/.gitconfig_cogo
[includeIf "gitdir:~/Work/"]
	path = ~/.gitconfig_cogo
[url "ssh://git@git.cogolo.net"]
	insteadOf = https://git.cogolo.net
[url "ssh://git@github.com/ryantking"]
	insteadOf = https://github.com/ryantking
[url "ssh://git@github.com/cogolabs"]
	insteadOf = https://github.com/cogolabs
