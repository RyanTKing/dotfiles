[user]
	name = Ryan King
	email = hello@ryanking.com
[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
	include = "~/.gitconfig.local"
[color]
	status = auto
	diff = auto
	branch = auto
	ui = true
[commit]
	gpgsign = true
[diff]
    tool = nvim
[merge]
    tool = nvim
[push]
	default = simple
[pull]
	rebase = true
[fetch]
	prune = true
[includeIf "gitdir:~/go/src/git.cogolo.net/**/*"]
	path = ~/.gitconfig_cogo
[includeIf "gitdir:~/Work/**/*"]
	path = ~/.gitconfig_cogo
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[url "ssh://git@git.cogolo.net"]
	insteadOf = https://git.cogolo.net
